<Page x:Class="SolarPotential.PageCommonComplete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SolarPotential"
      mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="200"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock x:Name="TextMessage" FontSize="24" Text="処理完了" FontWeight="Bold" HorizontalAlignment="Center"/>
		</StackPanel>
		<StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Button Click="OpenResultButton_Click" Width="200" Height="50" Content="出力結果フォルダを表示" Margin="0,0,0,50"/>
			<Button x:Name="AggregateButton" Click="AggregateButton_Click" Width="200" Height="50" Content="出力結果から&#xa;適地判定・集計を行う"/>
		</StackPanel>
	</Grid>
</Page>
